@model ERP.Models.CompanyType

@using (Html.BeginForm("Update", "CompanyType", FormMethod.Post, new { @id = "registerFormId" }))
{

    <div class="container CompanyTypeDetails col-md-12 col-lg-12 commonPadding">
        <div class="row  col-md-12 col-lg-12ccommonPadding">
            @*@{
                    var categories = Model.ErrorList; // Cast the list
                }

                @if(Model.ErrorList != null && Model.ErrorList.Count > 0)
                {
                @foreach (var c in @categories) // Print the list
                {
                    @Html.Label(categories.ToString());
                }
                }*@

            &nbsp;
        </div>
        <div class="row  col-md-12 col-lg-12">
            <div class="col-md-6 col-lg-6">

                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>Region :</label></div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drpCompTypeRegion", (IEnumerable<SelectListItem>)Model.RegionList, "Select Region", new { @class = "dropdownstyles", name = "drpCompTypeRegion" })
                        @*<span class="input-validation-error" data-valmsg-for="LocationName" data-valmsg-replace="true"></span>*@


                        <input type="hidden" name="hdnRegion" id="hdnRegion" />

                    </div>


                </div>
                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>Country :</label></div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drpCompTypeCountry", (IEnumerable<SelectListItem>)Model.CountryList, "Select Country", new { @class = "dropdownstyles", name = "drpCompTypeCountry" })
                        @*<span class="input-validation-error" data-valmsg-for="LocationName" data-valmsg-replace="true"></span>*@
                        <input type="hidden" name="hdnCountry" id="hdnCountry" />
                    </div>


                </div>

                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>State :</label></div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drpCompTypeState", (IEnumerable<SelectListItem>)Model.StateList, "Select State", new { @class = "dropdownstyles", name = "drpCompTypeState" })
                        @*<span class="input-validation-error" data-valmsg-for="LocationName" data-valmsg-replace="true"></span>*@
                        <input type="hidden" name="hdnState" id="hdnState" />
                    </div>


                </div>
                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>District :</label></div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drpCompTypedistrict", (IEnumerable<SelectListItem>)Model.DistrictList, "Select District", new { @class = "dropdownstyles", name = "drpCompTypedistrict" })
                        @*<span class="input-validation-error" data-valmsg-for="LocationName" data-valmsg-replace="true"></span>*@
                        <input type="hidden" name="hdnDistrict" id="hdnDistrict" />
                    </div>


                </div>
                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>Location :</label></div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drpCompTypelocation", (IEnumerable<SelectListItem>)Model.LocationList, "Select location", new { @class = "dropdownstyles", name = "drpCompTypelocation" })
                        @*<span class="input-validation-error" data-valmsg-for="CompanyName" data-valmsg-replace="true"></span>*@
                        <input type="hidden" name="hdnLocation" id="hdnLocation"  />
                    </div>

                </div>
                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>Company :</label></div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drpCompTypecompany", (IEnumerable<SelectListItem>)Model.CompanyList, "Select Comapny", new { @class = "dropdownstyles", name="drpCompTypecompany" })
                        @*<span class="input-validation-error" data-valmsg-for="LocationName" data-valmsg-replace="true"></span>*@
                        <input type="hidden" name="hdnCompany" id="hdnCompany" value="@Model.CompanyID" />
                    </div>


                </div>
                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-4 col-lg-4 lablestyles textright height-13"><div style="padding-top:14px;"><label>CompanyType Name :</label></div></div>
                    <div class="float-right col-md-8 col-lg-8">
                        <input class="textareastyles" style="width:300px;height:35px;" type="text" name="TypeName" value="@(Model.TypeName)" placeholder="Enter Company Type Name" />
                        @*<span class="input-validation-error" data-valmsg-for="CompanyTypeName" data-valmsg-replace="true"></span>*@

                    </div>

                </div>

            </div>

        </div>

        <div class="row col-md-12 col-lg-12 commonPadding">
            <div class="col-md-6 col-lg-6"><input type="button" data-url="@Url.Action("Update", "CompanyType")" class="formbutton float-right CompanyTypeAddEdit" data-identity="@(Model.Identity)" value="Update/Add" /></div>

            <div class="col-md-6 col-lg-6">
                <input type="button" value="Cancel" data-url="@Url.Action("_CompanyTypeCancel", "CompanyType")" data-identity="-1" class="formbutton CompanyTypeCancel" />
            </div>
            <input type="hidden" name="Identity" value="@(Model.Identity)">
        </div>



    </div>
}
