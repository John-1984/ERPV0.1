@model ERP.Models.Company

@using (Html.BeginForm("Update", "Company", FormMethod.Post, new { @id = "registerFormId" }))
{

    <div class="container CompanyDetails col-md-12 col-lg-12 commonPadding">
        <div class="row  col-md-12 col-lg-12ccommonPadding">
            @*@{
                    var categories = Model.ErrorList; // Cast the list
                }

                @if(Model.ErrorList != null && Model.ErrorList.Count > 0)
                {
                @foreach (var c in @categories) // Print the list
                {
                    @Html.Label(categories.ToString());
                }
                }*@

            &nbsp;
        </div>
        <div class="row  col-md-12 col-lg-12">
            <div class="col-md-6 col-lg-6">
                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div>Region :</div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drpRegion", (IEnumerable<SelectListItem>)Model.RegionList, "Select Region", new { @class = "dropdownstyles" })
                        @*<span class="input-validation-error" data-valmsg-for="CompanyName" data-valmsg-replace="true"></span>*@

                    </div>

                </div>
                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div>Country :</div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drpCountry", (IEnumerable<SelectListItem>)Model.CountryList, "Select Country", new { @class = "dropdownstyles" })
                        @*<span class="input-validation-error" data-valmsg-for="CompanyName" data-valmsg-replace="true"></span>*@

                    </div>

                </div>

                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div>State :</div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drpState", (IEnumerable<SelectListItem>)Model.StateList, "Select State", new { @class = "dropdownstyles" })
                        @*<span class="input-validation-error" data-valmsg-for="CompanyName" data-valmsg-replace="true"></span>*@

                    </div>

                </div>

                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div>District :</div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drpdistrict", (IEnumerable<SelectListItem>)Model.DistrictList, "Select District", new { @class = "dropdownstyles" })
                        @*<span class="input-validation-error" data-valmsg-for="CompanyName" data-valmsg-replace="true"></span>*@

                    </div>

                </div>

                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div>Location :</div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drplocation", (IEnumerable<SelectListItem>)Model.LocationList, "Select location", new { @class = "dropdownstyles" })
                        @*<span class="input-validation-error" data-valmsg-for="CompanyName" data-valmsg-replace="true"></span>*@

                    </div>

                </div>


            </div>
            <div class="col-md-6 col-lg-6">
                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-4 col-lg-4 lablestyles textright height-13"><div style="padding-top:14px;">Company Name :</div></div>
                    <div class="float-right col-md-8 col-lg-8">
                        <input class="textareastyles" style="width:300px;height:35px;" type="text" name="CompanyName" value="@(Model.CompanyName)" placeholder="Enter Company Name" />
                        @*<span class="input-validation-error" data-valmsg-for="CompanyName" data-valmsg-replace="true"></span>*@

                    </div>

                </div>

            </div>

        </div>

        <div class="row col-md-12 col-lg-12 commonPadding">
            <div class="col-md-6 col-lg-6"><input type="button" data-url="@Url.Action("Update", "Company")" class="formbutton float-right CompanyAddEdit" data-identity="@(Model.Identity)" value="Update/Add" /></div>
            <input type="hidden" name="Identity" value="@(Model.Identity)">
        </div>



    </div>
}















