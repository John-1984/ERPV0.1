@model ERP.Models.ItemMaster

@using (Html.BeginForm("Update", "ItemMaster", FormMethod.Post, new { @id = "registerFormId" }))
{

    <div class="container ItemMasterDetails col-md-12 col-lg-12 commonPadding">
        <div class="row  col-md-12 col-lg-12ccommonPadding">
            @*@{
                    var categories = Model.ErrorList; // Cast the list
                }

                @if(Model.ErrorList != null && Model.ErrorList.Count > 0)
                {
                @foreach (var c in @categories) // Print the list
                {
                    @Html.Label(categories.ToString());
                }
                }*@

            &nbsp;
        </div>
        <div class="row  col-md-12 col-lg-12">


            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>Product Category :</label> </div></div>
                <div class="float-right col-md-7 col-lg-8">
                    @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                    @Html.DropDownList("drpItemMasterProductMaster", (IEnumerable<SelectListItem>)Model.ProductMasterList, "Select Category", new { @class = "dropdownstyles", name = "drpItemMasterProductMaster" })
                    @*<span class="input-validation-error" data-valmsg-for="ItemMasterName" data-valmsg-replace="true"></span>*@
                    <input type="hidden" name="hdnProductMaster" id="hdnProductMaster" />
                </div>


            </div>

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>Vendor :</label> </div></div>
                <div class="float-right col-md-7 col-lg-8">
                    @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                    @Html.DropDownList("drpItemMasterVendor", (IEnumerable<SelectListItem>)Model.VendorList, "Select Vendor", new { @class = "dropdownstyles", name = "drpItemMasterVendor" })
                    @*<span class="input-validation-error" data-valmsg-for="ItemMasterName" data-valmsg-replace="true"></span>*@
                    <input type="hidden" name="hdnVendor" id="hdnVendor" />
                </div>


            </div>
            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>Brand :</label> </div></div>
                <div class="float-right col-md-7 col-lg-8">
                    @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                    @Html.DropDownList("drpItemMasterBrand", (IEnumerable<SelectListItem>)Model.BrandList, "Select Brand", new { @class = "dropdownstyles", name = "drpItemMasterBrand" })
                    @*<span class="input-validation-error" data-valmsg-for="ItemMasterName" data-valmsg-replace="true"></span>*@
                    <input type="hidden" name="hdnBrand" id="hdnBrand" value="@Model.BrandID" />
                </div>


            </div>

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-4 col-lg-4 lablestyles textright height-13"><div style="padding-top:14px;"><label>Item Name :</label> </div></div>
                <div class="float-right col-md-8 col-lg-8">
                    <input class="textareastyles" style="width:300px;height:35px;" type="text" name="ItemName" value="@(Model.ItemName)" placeholder="Enter Item Name" />
                    @*<span class="input-validation-error" data-valmsg-for="ItemMasterName" data-valmsg-replace="true"></span>*@

                </div>

            </div>

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>UOM :</label> </div></div>
                <div class="float-right col-md-7 col-lg-8">
                    @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                    @Html.DropDownList("drpItemMasterUOM", (IEnumerable<SelectListItem>)Model.UOMList, "Select UOM", new { @class = "dropdownstyles", name = "drpItemMasterUOM" })
                    @*<span class="input-validation-error" data-valmsg-for="ItemMasterName" data-valmsg-replace="true"></span>*@
                    <input type="hidden" name="hdnUOM" id="hdnUOM" value="@Model.UOMID" />
                </div>


            </div>

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-4 col-lg-4 lablestyles textright height-13"><div style="padding-top:14px;"><label>Item Description :</label> </div></div>
                <div class="float-right col-md-8 col-lg-8">
                    <textarea name="Description" rows="6" cols="30" class="textareastyles" placeholder="Enter Description">@(Model.Description)</textarea>
                    @*<span class="input-validation-error" data-valmsg-for="ItemMasterName" data-valmsg-replace="true"></span>*@

                </div>

            </div>

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-4 col-lg-4 lablestyles textright height-13"><div style="padding-top:14px;"><label>Item Weight :</label> </div></div>
                <div class="float-right col-md-8 col-lg-8">
                    <input class="textareastyles" style="width:300px;height:35px;" type="text" name="ItemWeight" value="@(Model.ItemWeight)" placeholder="Enter Item weight" />
                    @*<span class="input-validation-error" data-valmsg-for="ItemMasterName" data-valmsg-replace="true"></span>*@

                </div>

            </div>

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-4 col-lg-4 lablestyles textright height-13"><div style="padding-top:14px;"><label>Item Retail Price :</label> </div></div>
                <div class="float-right col-md-8 col-lg-8">
                    <input class="textareastyles" style="width:300px;height:35px;" type="text" name="RetailPrice" value="@(Model.RetailPrice)" placeholder="Enter Item Retail Price" />
                    @*<span class="input-validation-error" data-valmsg-for="ItemMasterName" data-valmsg-replace="true"></span>*@

                </div>

            </div>

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-4 col-lg-4 lablestyles textright height-13"><div style="padding-top:14px;"><label>Purchase Price :</label> </div></div>
                <div class="float-right col-md-8 col-lg-8">
                    <input class="textareastyles" style="width:300px;height:35px;" type="text" name="PurchacePrice" value="@(Model.PurchacePrice)" placeholder="Enter Item Purchase Price" />
                    @*<span class="input-validation-error" data-valmsg-for="ItemMasterName" data-valmsg-replace="true"></span>*@

                </div>

            </div>

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-4 col-lg-4 lablestyles textright height-13"><div style="padding-top:14px;"><label>Item Size :</label> </div></div>
                <div class="float-right col-md-8 col-lg-8">
                    <input class="textareastyles" style="width:300px;height:35px;" type="text" name="ItemSize" value="@(Model.ItemSize)" placeholder="Enter Item Size" />
                    @*<span class="input-validation-error" data-valmsg-for="ItemMasterName" data-valmsg-replace="true"></span>*@

                </div>

            </div>
        </div>

        <div class="row col-md-12 col-lg-12 commonPadding">
            <div class="col-md-6 col-lg-6"><input type="button" data-url="@Url.Action("Update", "ItemMaster")" class="formbutton float-right ItemMasterAddEdit" data-identity="@(Model.Identity)" value="Update/Add" /></div>

            <div class="col-md-6 col-lg-6">
                <input type="button" value="Cancel" data-url="@Url.Action("_ItemMasterCancel", "ItemMaster")" data-identity="-1" class="formbutton ItemMasterCancel" />
            </div>
            <input type="hidden" name="Identity" value="@(Model.Identity)">
        </div>



    </div>
}















