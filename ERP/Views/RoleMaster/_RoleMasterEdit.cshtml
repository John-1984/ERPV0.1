@model ERP.Models.RoleMaster

@using (Html.BeginForm("Update", "RoleMaster", FormMethod.Post, new { @id = "registerFormId" }))
{

    <div class="container RoleMasterDetails col-md-12 col-lg-12 commonPadding">
        <div class="row  col-md-12 col-lg-12ccommonPadding">
            @*@{
                    var categories = Model.ErrorList; // Cast the list
                }

                @if(Model.ErrorList != null && Model.ErrorList.Count > 0)
                {
                @foreach (var c in @categories) // Print the list
                {
                    @Html.Label(categories.ToString());
                }
                }*@

            &nbsp;
        </div>
        <div class="row  col-md-12 col-lg-12">

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>Region :</label></div></div>
                <div class="float-right col-md-7 col-lg-8">
                    @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                    @Html.DropDownList("drpRoleMasterRegion", (IEnumerable<SelectListItem>)Model.RegionList, "Select Region", new { @class = "dropdownstyles", name = "drpRoleMasterRegion" })
                    @*<span class="input-validation-error" data-valmsg-for="RoleMasterName" data-valmsg-replace="true"></span>*@
                    <input type="hidden" name="hdnRegion" id="hdnRegion" value="@(Model.RegionID)" />
                </div>


            </div>
            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>Module :</label></div></div>
                <div class="float-right col-md-7 col-lg-8">
                    @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                    @Html.DropDownList("drpRoleMasterModules", (IEnumerable<SelectListItem>)Model.ModuleList, "Select Module", new { @class = "dropdownstyles", name = "drpRoleMasterModules" })
                    @*<span class="input-validation-error" data-valmsg-for="RoleMasterName" data-valmsg-replace="true"></span>*@
                    <input type="hidden" name="hdnModules" id="hdnModules" value="@(Model.ModuleID)" />
                </div>


            </div>

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>Role Type :</label></div></div>
                <div class="float-right col-md-7 col-lg-8">
                    @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                    @Html.DropDownList("drpRoleMasterRoleType", (IEnumerable<SelectListItem>)Model.RoleTypeList, "Select Role Type", new { @class = "dropdownstyles", name = "drpRoleMasterRoleType" })
                    @*<span class="input-validation-error" data-valmsg-for="RoleMasterName" data-valmsg-replace="true"></span>*@
                    <input type="hidden" name="hdnRoleType" id="hdnRoleType" value="@(Model.RoleTypeID)" />
                </div>


            </div>

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-4 col-lg-4 lablestyles textright height-13"><div style="padding-top:14px;"><label>Role Name :</label></div></div>
                <div class="float-right col-md-8 col-lg-8">
                    <input class="textareastyles" style="width:300px;height:35px;" type="text" name="RoleName" value="@(Model.RoleName)" placeholder="Enter Role Name" />
                    @*<span class="input-validation-error" data-valmsg-for="RoleMasterName" data-valmsg-replace="true"></span>*@

                </div>
            </div>
        </div>

        <div class="row col-md-12 col-lg-12 commonPadding">
            <div class="col-md-6 col-lg-6"><input type="button" data-url="@Url.Action("Update", "RoleMaster")" class="formbutton float-right RoleMasterAddEdit" data-identity="@(Model.Identity)" value="Update/Add" /></div>
            <div class="col-md-6 col-lg-6">
                <input type="button" value="Cancel" data-url="@Url.Action("_RoleMasterCancel", "RoleMaster")" data-identity="-1" class="formbutton RoleMasterCancel" />
            </div>
            <input type="hidden" name="Identity" value="@(Model.Identity)">
        </div>



    </div>
}















