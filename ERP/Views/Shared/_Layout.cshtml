<!DOCTYPE html>
<html class="h-100 highlightSection">
<head>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" />    
    <link rel="stylesheet" href="/Content/General.css">
    <link rel="stylesheet" href="/Content/jquery.growl.css" >
    <link el="stylesheet"  href="~/Content/PagedList.css" />
    
    <title>@ViewBag.Title</title>

    <link rel="icon" type="image/x-icon" href="/Content/favicon.ico">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width , initial-scale=1, shrink-to-fit=no">

</head>
<body class="container-fluid height-100vh highlightSection  bodymaxheight bodymaxwidth nopadding" style="overflow:auto">
    <div class="col-md-12 col-lg-12 lightblue  bodymaxwidth nopadding height-33" style="border-bottom:1px solid white">
        <header class="highlightSection   verticalcenter " style="height:100%">

            <div class="float-left col-md-3 col-lg-3 verticalcenter height-33">
                @*<figure>*@
                <img src="/Content/ERPLogo.jpg" alt="The ERP App">
                @*</figure>*@

            </div>
            <div class="float-left col-md-9 col-lg-9 height-33 nopadding">

                <div class="col-md-12 col-lg-12">
                    <div class="float-left col-md-7 col-lg-7 height-33 textcentre ">
                        <div class="HeaderText" style="padding-bottom:20px; vertical-align:middle">
                            Centralized Processing Information System
                        </div>
                    </div>
                    <div class="float-left  col-md-4 col-lg-4 height-33  ">
                        <div class="col-md-12 col-lg-12 height-3 textright">

                            <div class="width-100" style="text-align:right;padding-top:7px;">
                                <img src="~/Content/Home-icon.png" alt="Home">&nbsp;&nbsp;<img src="~/Content/exit-img.png" alt="Exit">
                            </div>

                        </div>
                        <div class="col-md-12 col-lg-12 height-7" style="text-align:right">
                            <div class="width-100 ">&nbsp;</div>
                            <div class="width-100 welcomestyle " style="vertical-align:bottom">Welcome @ViewData["UserName"]</div>

                        </div>

                    </div>
                </div>
            </div>
        </header>
    </div>

    <div class="container  bodymaxwidth height-100vh contentmaxheight " style=" padding-left:0px;  padding-top:0px; ">
        <div class="row " style="padding-top:0px;min-height:535px;">
            <div class="col-md-12 col-lg-12">
                <div class="float-left col-md-2 col-lg-2 " style=" min-height:535px; padding-left:0px; background-color:#36A4C0; padding-top:0px; border-width:2px; border-right-color:red ">
                    @{Html.RenderAction("Index", "Menu");}
                </div>
                <div class=" float-left col-md-10 col-lg-10 ">
                    <div style="padding-right:30px">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <div class="container bodymaxwidth nopadding ">
            <footer class="nopadding lightblue footerstyle" style="height:30px; text-align:right;">
                Copy right 2019. All rights reserved.

            </footer>
        </div>
    </div>




    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="/Scripts/jquery.growl.js"></script>
    <script src="~/Scripts/CustomerJS.js"></script>
    <script src="~/Scripts/RegionJS.js"></script>
    <script src="~/Scripts/Country.js"></script>
    <script src="~/Scripts/State.js"></script>
    <script src="~/Scripts/District.js"></script>
    <script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.11/js/gijgo.min.js" type="text/javascript"></script>


</body>
</html>
