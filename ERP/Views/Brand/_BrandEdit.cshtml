@model ERP.Models.Brand

@using (Html.BeginForm("Update", "Brand", FormMethod.Post, new { @id = "registerFormId" }))
{

    <div class="container BrandDetails col-md-12 col-lg-12 commonPadding">
        <div class="row  col-md-12 col-lg-12ccommonPadding">
            @*@{
                    var categories = Model.ErrorList; // Cast the list
                }

                @if(Model.ErrorList != null && Model.ErrorList.Count > 0)
                {
                @foreach (var c in @categories) // Print the list
                {
                    @Html.Label(categories.ToString());
                }
                }*@

            &nbsp;
        </div>
        <div class="row  col-md-12 col-lg-12">

            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div><label>Region :</label></div></div>
                <div class="float-right col-md-7 col-lg-8">
                    @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                    @Html.DropDownList("drpBrandVendor", (IEnumerable<SelectListItem>)Model.VendorList, "Select Vendor", new { @class = "dropdownstyles",name= "drpBrandVendor" })
                    @*<span class="input-validation-error" data-valmsg-for="BrandName" data-valmsg-replace="true"></span>*@
                    <input type="hidden" name="hdnVendor" id="hdnVendor" value="@(Model.VendorID)" />
                </div>


            </div>





            <div class="row col-md-12 col-lg-12">
                <div class="float-left col-md-4 col-lg-4 lablestyles textright height-13"><div style="padding-top:14px;"><label>Brand Name :</label></div></div>
                <div class="float-right col-md-8 col-lg-8">
                    <input class="textareastyles" style="width:300px;height:35px;" type="text" name="BrandName" value="@(Model.BrandName)" placeholder="Enter Brand Name" />
                    @*<span class="input-validation-error" data-valmsg-for="BrandName" data-valmsg-replace="true"></span>*@

                </div>

            </div>


        </div>

        <div class="row col-md-12 col-lg-12 commonPadding">
            <div class="col-md-6 col-lg-6"><input type="button" data-url="@Url.Action("Update", "Brand")" class="formbutton float-right BrandAddEdit" data-identity="@(Model.Identity)" value="Update/Add" /></div>
            <div class="col-md-6 col-lg-6">
                <input type="button" value="Cancel" data-url="@Url.Action("_BrandCancel", "Brand")" data-identity="-1" class="formbutton BrandCancel" />
            </div>
            <input type="hidden" name="Identity" value="@(Model.Identity)">
        </div>



    </div>
}















