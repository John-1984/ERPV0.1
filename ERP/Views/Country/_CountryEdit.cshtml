@model ERP.Models.Country

@using (Html.BeginForm("Update", "Country", FormMethod.Post, new { @id = "registerFormId" }))
{

    <div class="container CountryDetails col-md-12 col-lg-12 commonPadding">
        <div class="row  col-md-12 col-lg-12">
            @{
                var categories = Model.ErrorList; // Cast the list
            }
            @*@{
            var categories = Model.ErrorList; // Cast the list
        }

        @if(Model.ErrorList != null && Model.ErrorList.Count > 0)
        {
        @foreach (var c in @categories) // Print the list
        {
            @Html.Label(categories.ToString());
        }
        }*@
        </div>
        <div class="row  col-md-12 col-lg-12">
            <div class="col-md-6 col-lg-6">
                <div class="row col-md-12 col-lg-12"  >
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div >Region :</div></div>
                    <div class="float-right col-md-7 col-lg-8">
                       @* @Html.DropDownList("Mobiledropdown1", Model.RegionList)*@
                        @Html.DropDownList("drpRegion", (IEnumerable<SelectListItem>)Model.RegionList, "Select Region", new { @class = "dropdownstyles" })
                        @*<span class="input-validation-error" data-valmsg-for="CountryName" data-valmsg-replace="true"></span>*@

                    </div>

                </div>
                <div class="row col-md-12 col-lg-12 padding-bottom-8">&nbsp;</div>
                <div class="row col-md-12 col-lg-12">
                    <div class="float-left col-md-5 col-lg-4 lablestyles textright height-13"><div >Country Name :</div></div>
                    <div class="float-right col-md-7 col-lg-8">
                        <input class="textareastyles" style="width:300px;height:30px;" type="text" name="CountryName" value="@(Model.CountryName)" placeholder="Enter Country Name" />
                        @*<span class="input-validation-error" data-valmsg-for="CountryName" data-valmsg-replace="true"></span>*@

                    </div>

                </div>

            </div>

        </div>

        <div class="row col-md-12 col-lg-12 commonPadding">
            <div class="col-md-6 col-lg-6"><input type="button" data-url="@Url.Action("Update", "Country")" class="formbutton float-right CountryAddEdit" data-identity="@(Model.Identity)" value="Update/Add" /></div>
            <input type="hidden" name="Identity" value="@(Model.Identity)">
        </div>



    </div>
}
