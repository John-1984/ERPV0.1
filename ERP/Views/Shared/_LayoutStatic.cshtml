    <link rel="stylesheet" href="/Content/General.css">
    <title>@ViewBag.Title</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body class="container-fluid height-100vh highlightSection  bodymaxheight bodymaxwidth nopadding" style="overflow:auto; background-image:url(../../Content/bodybglogin.jfif); background-repeat:repeat" >
    <div class="col-md-12 col-lg-12 sandcolor  bodymaxwidth nopadding height-33" style="border-bottom:1px solid white">
        <header class="highlightSection   verticalcenter " style="height:100%">

            <div class="float-left col-md-3 col-lg-3 verticalcenter height-33">
                @*<figure>*@
                <img src="/Content/ERPLogo.jpg" alt="The ERP App">
                @*</figure>*@

            </div>
            <div class="float-left col-md-9 col-lg-9 height-33 textcentre ">
                <div class="float-left col-md-1 col-lg-1"></div>
                <div class="float-left col-md-7 col-lg-7 height-33 textcentre ">
                    <div class="HeaderText" style="padding-bottom:20px; vertical-align:middle">
                        Centralized Processing Information System
                    </div>
                </div>
                <div class="float-right col-md-2 col-lg-2 height-33">
                    <div class="col-md-12 col-lg-12 height-3 ">

                        <div class="width-100 welcomestyle " style="vertical-align:bottom">Welcome Guest</div>

                    </div>
                    

                </div>
            </div>
        </header>
    </div>

    <div class="container  bodymaxwidth height-100vh contentmaxheight" style="padding-left:0px;  padding-top:0px; background-image:url(../../Content/bodybglogin.jfif); background-repeat:repeat  ">
        <div class="row nopadding" style="padding-top:0px;min-height:535px;">
            <div class="col-md-12 col-lg-12">
                <div class="col-md-12 col-lg-12 height-30 ">

                </div>

                <div class="col-md-12 col-lg-12 centered ">
                    

                        <div class="col-md-12 col-lg-12 centered">
                            <div id="roundcornerbox" style="width:350px;height:300px;  " >
                                <div style="padding-top:20%;padding-left:7%">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <div class="container bodymaxwidth nopadding" style="background-image:url(../../Content/bodybglogin.jfif);">
            <footer class="nopadding sandcolor footerstyle" style="height:30px; text-align:right; font-weight:bold;">
                Copy right 2019. All rights reserved.

            </footer>
        </div>
    </div>


    @*<script src="~/Scripts/CustomerJS.js" type="text/javascript"></script>*@
