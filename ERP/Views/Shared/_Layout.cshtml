    <link rel="stylesheet" href="/Content/jquery.growl.css" >
    <link el="stylesheet"  href="~/Content/PagedList.css" />
    
    <title>@ViewBag.Title</title>

    <link rel="icon" type="image/x-icon" href="/Content/favicon.ico">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width , initial-scale=1, shrink-to-fit=no">

</head>
<body class="container-fluid height-100vh highlightSection  bodymaxheight bodymaxwidth nopadding" style="overflow:auto">
    <div class="col-md-12 col-lg-12 sandcolor  bodymaxwidth nopadding height-30" style="border-bottom:1px solid white; max-height:26%">
        <header class="highlightSection verticalcenter h-100">

            <div class="float-left col-md-3 col-lg-3 verticalcenter height-30">
                @*<figure>*@
                <img src="/Content/ERPLogo.jpg" alt="The ERP App">
                @*</figure>*@

            </div>
            <div class="float-left col-md-9 col-lg-9 nopadding  height-30">

                <div class="col-md-12 col-lg-12">
                    <div class="col-md-12 col-lg-12">
                        <div class="float-left col-md-5 col-lg-7  textcentre ">
                            <div class="HeaderText" style="padding-top:15px; vertical-align:middle">
                                Centralized Processing Information System
                            </div>
                        </div>
                        <div class="float-left  col-md-3 col-lg-3 textright" style="vertical-align:top;">

                            <div class="col-md-12 col-lg-12 " style="text-align:right;">
                                <div class="width-100 welcomestyle " style="vertical-align:bottom">Welcome @TempData["UserName"]</div>

                            </div>

                        </div>
                        <div class="float-left  col-md-4 col-lg-2">
                            <div class="col-md-2 col-lg-2 float-left textright">
                                <img src="~/Content/Home-icon.png" alt="Home">
                            </div>
                            <div class="col-md-2 col-lg-2 float-left textright">

                                <img src="~/Content/exit-img.png" alt="Exit">
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </header>
    </div>

    <div class="container  bodymaxwidth height-100vh contentmaxheight " style=" padding-left:0px;  padding-top:0px; ">
        <div class="row " style="padding-top:0px;min-height:535px;">
            <div class="col-md-12 col-lg-12">
                <div class="float-left col-md-3 col-lg-2 " style=" min-height:535px; padding-left:0px; background-color:#EAD1B2; padding-top:0px; border-width:2px; border-right-color:red ">
                    @{Html.RenderAction("Index", "Menu");}
                </div>
                <div class=" float-left col-md-9 col-lg-10 ">
                    <div style="padding-right:30px">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <div class="container bodymaxwidth nopadding ">
            <footer class="nopadding sandcolor footerstyle" style="height:30px; text-align:right;">
                Copy right 2019. All rights reserved.

            </footer>
        </div>
    </div>




